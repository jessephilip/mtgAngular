{
    "env": {
        "browser": true,
		"node": true,
        "es6": true
    },
    "extends": [
		"eslint:recommended",
		"angular"
	],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
